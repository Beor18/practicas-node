<% include partials/head %>

    <% include partials/sidebar %>
        <% if (user.local.role == "ADMIN_ROLE") { %>
            <div class="col-md-10 col-md-offset-2 content">
                <h2>Registrarse al Sistema</h2>
                <form action="/registro" method="post" encType="multipart/form-data">
                    <div>
                        <input type="text" name="username" placeholder="Usuario">
                    </div>
                    <div>
                        <input type="password" name="password" placeholder="Contraseña">
                    </div>
                    <div>
                        <input type="text" name="country" placeholder="Pais">
                    </div>

                    <div>
                        <select name="role">
                        <option value="ADMIN_ROLE">Administrador</option>
                        <option value="USER_ROLE">Usuario Común</option>
                      </select>
                    </div>

                    <div>
                        <input type="text" name="foto" placeholder="Agregar Foto solo URL">
                    </div>

                    <!--<div>
                <input type="file" name="archivo" />
            </div>-->

                    <div>
                        <input type="submit" value="Registrar" class="btn btn-success">
                    </div>
                </form>
            </div>
            <% } else{ %>
                <div class="col-md-10 col-md-offset-2 content">
                    <h1>NO TIENE PERMISOS!!!</h1>
                </div>

                <% } %>
