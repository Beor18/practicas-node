<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
<script id="entry-template" type="text/x-handlebars-template">
    {{#items}}
    <div class="col-md-3">
        <div class="thumbnail">
            <img src="http://localhost:3000/uploads/{{fotos}}" alt="...">
            <div class="caption">
                <h3 style="text-transform:uppercase;">{{titulo}}</h3>
                <p>{{autor}}</p>
                <p>{{descripcion}}</p>
            </div>
        </div>
    </div>
    {{/items}}
</script>
<script>
    var items = {};
    var source = document.getElementById("entry-template").innerHTML;
    var template = Handlebars.compile(source);
    var socket = io.connect('http://localhost:3000');

    socket.on('items', function(data) {
        items['items'] = data;
        console.log(items);
        template(items);
        $('#post-add').html(template(items));
    });

    socket.on('comment.count', function(data) {
        $('#posts-count').text(data.count);
    });
</script>
